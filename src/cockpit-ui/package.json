{
  "name": "forge-cockpit-ui",
  "version": "1.7.10",
  "private": true,
  "main": "src/main.ts",
  "scripts": {
    "start": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --host",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json,css,scss}\"",
    "lint": "eslint \"src/**/*.{ts,vue,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,vue,js}\" --fix",
    "check": "npm run typecheck && npm run lint"
  },
  "dependencies": {
    "@tomjs/vite-plugin-vscode": "^4.2.1",
    "@tomjs/vscode-extension-webview": "^2.0.0",
    "@tomjs/vscode-webview": "^2.0.2",
    "@vueuse/core": "^13.1.0",
    "clipboard": "^2.0.11",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.3.0",
    "uuid": "^11.1.0",
    "vue": "^3.5.0",
    "vue-clipboard2": "^0.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-typescript": "^14.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-plugin-vscode-webview-hmr": "^1.0.1",
    "vue-tsc": "^2.0.0"
  }
}
