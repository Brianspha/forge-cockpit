{
  "name": "forge-cockpit-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --port 5050",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json,css,scss}\"",
    "lint": "eslint \"src/**/*.{ts,vue,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,vue,js}\" --fix",
    "check": "npm run typecheck && npm run lint"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "@vueuse/core": "^13.1.0",
    "clipboard": "^2.0.11",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.3.0",
    "uuid": "^11.1.0",
    "vue": "^3.2.33",
    "vue-clipboard2": "^0.3.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.27",
    "@types/vscode-webview": "^1.57.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/tsconfig": "^0.1.3",
    "typescript": "~4.6.3",
    "vite": "^2.9.13",
    "vite-plugin-vscode-webview-hmr": "^1.0.1",
    "vue-tsc": "^0.34.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.0"
  }
}
